<% include ./partials/header.ejs %>

<div class="auth-form container pad-top">
    <form action="/class" method="POST">
        <div class="form-group">
            <input type="text" name="name" value="<%= foundClass.name %>">
        </div>
        <div class="form-group">
            <input type="text" name="id" value="<%= foundClass.courseId %>">
        </div>
        <div class="form-group">
            <input type="url" name="url" value="<%= foundClass.courseUrl %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-large btn-block">Submit</button>
        </div>
    </form>
</div>


<% include ./partials/footer.ejs %>