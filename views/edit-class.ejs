<% include ./partials/header.ejs %>

<div class="auth-form container pad-top">
    <form action="/class/<%=found._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="name" value="<%=found.name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="id" value="<%=found.courseId%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="url" name="url" value="<%=found.courseUrl%>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-large btn-block">Submit</button>
        </div>
    </form>
</div>


